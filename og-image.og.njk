<div style="display: flex; flex-direction: row; width: 1200px; height: 630px; background-color: #111118;">
  <div style="display: flex; width: 8px; height: 630px; background-color: #89B4FA;"></div>
  <div style="display: flex; flex-direction: column; flex-grow: 1; padding: 60px; justify-content: space-between;">
    <div style="display: flex; flex-direction: row; align-items: center;">
      <img src="data:image/png;base64," style="width: 64px; height: 64px; border-radius: 10px; margin-right: 20px;" />
      <span style="font-size: 40px; color: #cdd6f4; font-weight: 400; font-family: 'JetBrains Mono';">FlohGro</span>
    </div>
    <div style="display: flex; flex-direction: column; flex-grow: 1; justify-content: center; padding-top: 20px; padding-bottom: 20px;">
      <span style="font-size: 48px; color: #89B4FA; font-weight: 700; line-height: 1.3; font-family: 'JetBrains Mono';">{{ title | safe }}</span>
      {% if summary %}
      <span style="font-size: 24px; color: #a6adc8; font-weight: 400; line-height: 1.4; font-family: 'JetBrains Mono'; margin-top: 16px;">{{ summary | safe }}</span>
      {% endif %}
    </div>
    <div style="display: flex;">
      <span style="font-size: 24px; color: #6c7086; font-weight: 400; font-family: 'JetBrains Mono';">flohgro.com</span>
    </div>
  </div>
</div>

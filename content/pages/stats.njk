<h1>Stats</h1>

<div class="post-card stats-summary">
<h2>Overview</h2>
<div class="stats-grid">
  <a href="/blog/" class="stat-item">
    <span class="stat-number">{{ collections.blogPosts | length }}</span>
    <span class="stat-label">Blog Posts</span>
  </a>
  <a href="/posts/" class="stat-item">
    <span class="stat-number">{{ collections.socialPosts | length }}</span>
    <span class="stat-label">Social Posts</span>
  </a>
  <a href="/quotes/" class="stat-item">
    <span class="stat-number">{{ collections.quotePosts | length }}</span>
    <span class="stat-label">Quotes</span>
  </a>
  <a href="/tags/" class="stat-item">
    <span class="stat-number">{{ collections.tagslist | length }}</span>
    <span class="stat-label">Tags</span>
  </a>
</div>
</div>

<div class="post-card">
<h2>Blog Insights</h2>
{% blogStats collections.blogPosts %}
</div>

<div class="post-card">
<h2>Post Activity</h2>
{% postGraphLinked collections.blogPosts %}
</div>

<div class="post-card">
<h2>Social Post Activity</h2>
{% postGraphLinked collections.socialPosts, { showContent: true } %}
</div>

<div class="post-card">
<h2>Quote Activity</h2>
{% postGraphLinked collections.quotePosts, { showContent: true } %}
</div>

{% include "random-quote.njk" %}

<script>
document.querySelectorAll('a.epg__box').forEach(function(box) {
  box.addEventListener('mouseenter', function() {
    var tip = box.querySelector('.epg__tooltip');
    if (!tip) return;
    tip.style.display = 'flex';
    tip.style.maxHeight = (window.innerHeight - 8) + 'px';
    tip.style.overflowY = 'auto';
    var rect = box.getBoundingClientRect();
    var tipRect = tip.getBoundingClientRect();
    var left = rect.left + rect.width / 2 - tipRect.width / 2;
    if (left < 4) left = 4;
    if (left + tipRect.width > window.innerWidth - 4) left = window.innerWidth - 4 - tipRect.width;
    var top = rect.top - tipRect.height - 6;
    if (top < 4) top = rect.bottom + 6;
    if (top + tipRect.height > window.innerHeight - 4) top = window.innerHeight - 4 - tipRect.height;
    if (top < 4) top = 4;
    tip.style.left = left + 'px';
    tip.style.top = top + 'px';
  });
  box.addEventListener('mouseleave', function() {
    var tip = box.querySelector('.epg__tooltip');
    if (tip) tip.style.display = 'none';
  });
});
</script>

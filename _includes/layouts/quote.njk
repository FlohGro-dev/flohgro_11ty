---
layout: layouts/base.njk
---

<div class="post-card">
<h1>
    {{ title }}
</h1>
<blockquote>{{ content | safe }}</blockquote>
</div>{%- if collections.quotePosts %}
{%- set previousQuotePost = collections.quotePosts | getPreviousCollectionItem %}
{%- set nextQuotePost = collections.quotePosts | getNextCollectionItem %}
{%- if nextQuotePost or previousQuotePost %}
    <ul class="links-nextprev">
        {%- if previousQuotePost %}
            <li class="links-nextprev-prev">←
                <a href="{{ site.baseUrl }}{{ previousQuotePost.url }}">{{ previousQuotePost.data.title }}</a>
            </li>
        {% endif %}
        {%- if nextQuotePost %}
            <li class="links-nextprev-next">
                <a href="{{ site.baseUrl }}{{ nextQuotePost.url }}">{{ nextQuotePost.data.title }}</a>
                →</li>
        {% endif %}
    </ul>
{%- endif %}{%- endif %}
